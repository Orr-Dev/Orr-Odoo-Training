<odoo>

    <!-- ALN Owner Tree view -->
    <record id="aln_owner_tree" model="ir.ui.view">
        <field name="name">aln.owner.tree</field>
        <field name="model">aln.owner</field>
        <field name="arch" type="xml">
            <tree string="ALN Owner">
                <field name="owner_id_txt"/>
                <field name="owner_name"/>
                <field name="owner_phone"/>
                <field name="own_published_id"/>
                <field name="own_published_date"/>
                <field name="own_state"/>
            </tree>
        </field>
    </record>

    <!-- ALN Owner Form View -->
    <record id="aln_owner_form" model="ir.ui.view">
        <field name="name">aln.owner.form</field>
        <field name="model">aln.owner</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="owner_id_txt"/>
                            <field name="owner_name"/>
                            <field name="owner_address"/>
                            <field name="owner_phone"/>
                        </group>
                        <group>
                            <field name="own_state"/>
                            <field name="own_published_id"/>
                            <field name="own_published_date"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!--ALN Owner Search -->
    <record id="aln_owner_view_search" model="ir.ui.view">
        <field name="name">aln.owner.search</field>
        <field name="model">aln.owner</field>
        <field name="arch" type="xml">
            <search string="ALN Owner Search">
                <field name="owner_id_txt"/>
                <field name="owner_name"/>
                <field name="owner_phone"/>
                <field name="own_published_id"/>
                <group expand="0" string="Group By">
                    <filter string="Owner" name="owner" context="{'group_by':'owner_id_txt'}"/>
                    <filter string="Owner Name" name="owner_name" context="{'group_by':'owner_name'}"/>
                    <filter string="Publisher" name="publish" context="{'group_by':'own_published_id'}"/>
                    <filter string="State" name="state" context="{'group_by':'own_state'}"/>
                </group>
            </search>
        </field>
    </record>

    <!--Action  -->
    <record id="aln_owner_action" model="ir.actions.act_window">
        <field name="name">ALN Owner</field>
        <field name="res_model">aln.owner</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first ALN Owner.
            </p>
        </field>
    </record>

    <!--Menuitem -->
    <menuitem id="aln_owner_menu" action="aln_owner_action"
        sequence="50" parent="alndata_connector.menu_aln_root"/>

</odoo>
