<odoo>

    <!-- ALN contact Tree view -->
    <record id="aln_contact_tree" model="ir.ui.view">
        <field name="name">aln.contact.tree</field>
        <field name="model">aln.contact</field>
        <field name="arch" type="xml">
            <tree string="ALN contact">
                <field name="contact_id_txt"/>
                <field name="contact_name"/>
                <field name="contact_title"/>
                <field name="contact_company_property"/>
                <field name="associated_id_txt"/>
                <field name="corporate_id_txt"/>
                <field name="cont_published_id"/>
                <field name="cont_published_date"/>
                <field name="cont_state"/>
            </tree>
        </field>
    </record>

    <!-- ALN contact Form View -->
    <record id="aln_contact_form" model="ir.ui.view">
        <field name="name">aln.contact.form</field>
        <field name="model">aln.contact</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="contact_id_txt"/>
                            <field name="contact_name"/>
                            <field name="contact_title"/>
                            <field name="contact_email"/>
                            <field name="contact_company_property"/>
                            <field name="associated_id_txt"/>
                            <field name="corporate_id_txt"/>
                            <field name="contact_rowversion"/>
                        </group>
                        <group>
                            <field name="cont_last_changed_date"/>
                            <field name="cont_state"/>
                            <field name="cont_published_id"/>
                            <field name="cont_published_date"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!--ALN contact Search -->
    <record id="aln_contact_view_search" model="ir.ui.view">
        <field name="name">aln.contact.search</field>
        <field name="model">aln.contact</field>
        <field name="arch" type="xml">
            <search string="ALN contact Search">
                <field name="contact_id_txt"/>
                <field name="contact_name"/>
                <field name="contact_title"/>
                <field name="contact_company_property"/>
                <field name="associated_id_txt"/>
                <field name="corporate_id_txt"/>
                <group expand="0" string="Group By">
                    <filter string="Contact" name="contact" context="{'group_by':'contact_id_txt'}"/>
                    <filter string="Name" name="name" context="{'group_by':'contact_name'}"/>
                    <filter string="Title" name="title" context="{'group_by':'contact_title'}"/>
                    <filter string="Publisher" name="publish" context="{'group_by':'cont_published_id'}"/>
                    <filter string="State" name="state" context="{'group_by':'cont_state'}"/>
                </group>
            </search>
        </field>
    </record>

    <!--Action  -->
    <record id="aln_contact_action" model="ir.actions.act_window">
        <field name="name">ALN Contact</field>
        <field name="res_model">aln.contact</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first ALN contact.
            </p>
        </field>
    </record>

    <!--Menuitem -->
    <menuitem id="aln_contact_menu" action="aln_contact_action"
        sequence="40" parent="alndata_connector.menu_aln_root"/>

</odoo>
