<odoo>
    <record id="stock_production_lot_roll_tags_button" model="ir.ui.view">
        <field name="name">stock.proudction.lot.roll.tags.button</field>
        <field name="model">stock.production.lot</field>
        <field name="inherit_id" ref="stock.view_production_lot_form"/>
        <field name="arch" type="xml">
            <field name="ref" position="after">
                <group>
                    <field name="hide_roll_tags_button" invisible="1"/>
                    <button name="print_last_roll_tag" string="Print Roll Tag" type="object" class="oe_highlight" attrs="{'invisible': [('hide_roll_tags_button', '!=', False)]}"/>
                </group>
            </field>
        </field>
    </record>
</odoo>
