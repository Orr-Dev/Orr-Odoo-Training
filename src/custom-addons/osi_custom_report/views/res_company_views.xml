<?xml version="1.0"?>
<odoo>

    <record id="res_company_form_view_default_styles" model="ir.ui.view">
        <field name="name">res.company.form.default.styles</field>
        <field name="model">res.company</field>
        <field name="inherit_id" ref="base.view_company_form"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook" position="inside">
                <page string="Report Defaults">
                    <group>
                        <group>
                            <field name="so_style"/>
                            <field name="inv_style"/>
                            <field name="pick_style"/>
                            <field name="dn_style"/>
                            <field name="po_style"/>
                            <field name="rfq_style"/>
                            <field name="fsm_style"/>
                        </group>
                    </group>
                </page>
            </xpath>
        </field>
    </record>

</odoo>
