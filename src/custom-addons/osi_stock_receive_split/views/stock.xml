<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="stock_move_operation_form_view_ext" model="ir.ui.view">
        <field name="name">stock.move.operation.form.view.ext</field>
        <field name="model">stock.move</field>
        <field name="inherit_id" ref="stock.view_stock_move_operations"/>
        <field name="arch" type="xml">
            <field name="move_line_ids" position="before">
                <group>
                    <group name="lines_split">
                        <label for="no_of_lines"/>
                        <div class="o_row">
                            <field name="no_of_lines" attrs="{'readonly': [('move_line_ids', '!=', [])]}"/>
                            <button name="compute_operation_lines"
                                    type="object"
                                    string="Compute"
                                    attrs="{'invisible': [('move_line_ids', '!=', [])]}"
                                    class="oe_highlight">
                            </button>
                            <button name="unlink_move_lines"
                                    type="object"
                                    string="Delete All Lines"
                                    attrs="{'invisible': [('move_line_ids', '=', [])]}"
                                    class="oe_highlight">
                            </button>
                        </div>
                    </group>
                </group>
            </field>
        </field>
    </record>

    <record id="view_stock_move_line_operation_tree_ext" model="ir.ui.view">
        <field name="name">Stock Move Dye Lot</field>
        <field name="model">stock.move.line</field>
        <field name="inherit_id" ref="stock.view_stock_move_line_operation_tree"/>
        <field name="groups_id" eval="[(4, ref('uom.group_uom'))]"/>
        <field name="arch" type="xml">
            <field name="product_uom_qty" position="before">
                <field name="dye_lot"/>
            </field>
        </field>
    </record>

</odoo>